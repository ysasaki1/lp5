---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Art College Student Support Platform',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Support Now',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn More', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Art Student Support Hero Image' }}
  >
    <Fragment slot="title">
      Support <span class="hidden xl:inline">Art Students through</span>
      <span class="text-accent dark:text-white highlight"> Our Platform</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Join Us</span> in empowering art students by providing them with financial support
        and showcasing their unique artwork.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Empower Art Students!</span>
      Support aspiring artists by contributing monthly or annually and receive high-quality reproductions of their work.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What You Get with Our Support Platform"
    subtitle="A unique opportunity to support art students while enjoying access to their artwork."
    items={[
      {
        title: 'Support Art Creation',
        description:
          'Provide financial assistance to art students, helping them create original artworks.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Receive High-Quality Reproductions',
        description:
          'Enjoy high-definition reproductions of the artworks during the support period.',
        icon: 'tabler:components',
      },
      {
        title: 'Transparent Funding',
        description:
          '80% of the support goes directly to the artists, ensuring they receive fair compensation.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Anonymous Support',
        description:
          'Supporters can remain anonymous while contributing to the artistsâ€™ success.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Join a Community of Supporters',
        description:
          "Become part of a community that values and uplifts aspiring artists.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Easy Contribution Process',
        description:
          'Simple and straightforward process to support your favorite artists.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside the Platform"
    title="Empowering Artists: Your Contribution Matters!"
    items={[
      {
        title: 'Support Art Students',
        description:
          'Help students create original works while receiving beautiful reproductions in return.',
      },
      {
        title: 'Transparent Financial Model',
        description:
          'Understand how your contributions directly support artists and their creative journeys.',
      },
      {
        title: 'Engage with Art',
        description:
          'Experience the joy of art and creativity while supporting emerging talents in the field.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Support Creativity and Talent</h3>
      Make a meaningful impact on the lives of art students.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High Level of Customization',
        description: `Easily tailor the platform to match your preferences and engage with the artists in a meaningful way.`,
      },
      {
        title: 'Multiple Contribution Options',
        description:
          'Choose between annual or monthly contributions to support the artists you believe in.',
      },
      {
        title: 'Fully Responsive Design',
        description:
          "Access the platform seamlessly on any device, ensuring a smooth user experience.",
      },
      {
        title: 'Integration of Art',
        description:
          'Enjoy access to various artworks and artists\' stories, enriching your understanding of the art world.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building a website from scratch and launch your online presence sooner with AstroWind.',
      },
      {
        title: 'Community support',
        description: `Join the growing community for insights, resources, and assistance, ensuring you're never alone on your web development journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Designed to foster growth and success.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get involved in supporting art students today!"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Sign Up</span>',
        description:
          "Create an account on our platform to start your journey of supporting art students. It's quick and easy!",
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Choose Your Support</span>',
        description:
          "Select the level of financial support you wish to provide, whether it's monthly or annually.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Enjoy the Art</span>',
        description:
          'Receive high-quality reproductions of the artworks during your support period and connect with the artists.',
        icon: 'tabler:paint',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
       image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

 <Features2
    title="Support for Art College Students"
    subtitle="A platform for art students to create original artworks with the help of supporters."
    tagline="Support System"
    items={[
      {
        title: 'Artwork Creation',
        description: "Art students create original pieces while receiving financial support from patrons.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'High-Quality Replicas',
        description:
          "Supporters receive high-fidelity reproductions of the artworks during the support period.",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Financial Distribution',
        description:
          '80% of the support funds go directly to the art students, ensuring they benefit from their work.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Anonymous Support',
        description:
          "Art students remain anonymous during the support period, allowing them to focus on their work.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Flexible Contributions',
        description:
          'Supporters can choose to contribute annually or monthly, making it accessible for everyone.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Secure Storage',
        description: 'The platform securely stores the original artworks, ensuring their safety and preservation.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Community Engagement',
        description: 'Join a community of art lovers and supporters who believe in nurturing artistic talent.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Impactful Support',
        description:
          'Your contributions directly impact the lives of art students, helping them pursue their passion.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Discover New Talent',
        description: "Explore the works of emerging artists and support their journey in the art world.",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Discover More About Our Platform"
    information={`Our blog highlights the stories of art students and supporters, showcasing the impact of your contributions.
                        Each article provides insights into the art world and the journeys of talented individuals.
                        Join us in celebrating creativity and community!
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Explore the following questions to understand how our platform works and the benefits of supporting art students."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is this platform?',
        description:
          "This platform connects art College students with supporters who wish to help them create and showcase their work.",
      },
      {
        title: 'How can I support an artist?',
        description:
          'You can choose to provide financial support either annually or monthly, based on your preference.',
      },
      {
        title: 'What happens to the original artwork?',
        description:
          "The original artworks are securely stored by the platform until the support period ends.",
      },
      {
        title: 'Can I remain anonymous as a supporter?',
        description:
          "Yes, supporters can choose to remain anonymous throughout the support period.",
      },
      {
        title: 'How is my contribution used?',
        description:
          "80% of your contribution goes directly to the artist, helping them with their creative journey.",
      },
      {
        title: 'What type of artworks can I support?',
        description:
          "You can support a variety of artworks created by talented art students, from paintings to digital art.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Artists Supported', amount: '500+' },
      { title: 'Artworks Created', amount: '1,200+' },
      { title: 'Supporters Joined', amount: '3,000+' },
      { title: 'Community Engagements', amount: '1,500+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Us as a Supporter',
        href: 'https://www.artplatform.com/join',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
      Support&nbsp;Art&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">College&nbsp;Students</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join us in making a difference in the lives of aspiring artists. <br class="hidden md:inline" />Your support matters!
    </Fragment>
  </CallToAction>
</Layout>
