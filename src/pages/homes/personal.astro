---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Personal Homepage Demo',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#' },
        { text: 'About', href: '#about' },
        { text: 'Resume', href: '#resume' },
        { text: 'Porfolio', href: '#porfolio' },
        { text: 'Blog', href: '#blog' },
        { text: 'Github', href: 'https://github.com/onwidget' },
      ]}
      actions={[
        {
          text: 'Hire me',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>



<!-- Hero2 Widget ******************* -->

<Hero
  id="hero"
  title="Artist Showcase"
  tagline="Art Student Platform"
  actions={[{ variant: 'primary', text: 'Support me', href: getPermalink('/contact#form') }]}
>
  <Fragment slot="subtitle">
    I'm an aspiring artist passionate about creating visual stories. <br /> With years of dedication and training, I infuse vitality into my art, transforming concepts into captivating realities.
  </Fragment>
</Hero>

<!-- Content Widget **************** -->

<Content
  id="about"
  columns={3}
  items={[
    {
      icon: 'tabler:brand-dribbble',
      callToAction: {
        target: '_blank',
        text: 'Dribbble',
        href: '#',
      },
    },
    {
      icon: 'tabler:brand-behance',
      callToAction: {
        target: '_blank',
        text: 'Behance',
        href: '#',
      },
    },
    {
      icon: 'tabler:brand-pinterest',
      callToAction: {
        target: '_blank',
        text: 'Pinterest',
        href: '#',
      },
    },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1491349174775-aaafddd81942?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
    alt: 'Colorful Art Image',
    loading: 'eager',
  }}
>
  <Fragment slot="content">
    <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
    <p>
      Welcome to my artistic journey. My work is a testament to my commitment to bringing ideas to life, where each pixel becomes a brushstroke on the canvas of imagination.
    </p>
    <br />
    <p>
      I find inspiration in the world around me, whether through the pages of a captivating novel, the intricate details of nature, or the vibrant hues during my outdoor escapades.
    </p>
    <br />
    <p>If you're curious to dive deeper into my work, you can follow me:</p>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</Content>

<!-- Steps Widget ****************** -->

<Steps
  id="resume"
  title="Work Experience"
  items={[
    {
      title:
        'Artist <br /> <span class="font-normal">Freelance Artist, Various Locations</span> <br /> <span class="text-sm font-normal">2021 - Present</span>',
      description: `Collaborate with clients to create custom artworks. <br /> Develop unique pieces for exhibitions, galleries, and private collections. <br /> Participate in community art projects and workshops. <br /> Create visually appealing designs for various media.`,
      icon: 'tabler:briefcase',
    },
    {
      title:
        'Intern Artist <br /> <span class="font-normal">Local Art Studio, Hometown</span> <br /> <span class="text-sm font-normal">2019 - 2021</span>',
      description: `Assisted senior artists in creating artworks and preparing for exhibitions. <br /> Contributed to the studio's marketing efforts through social media. <br /> Gained hands-on experience in various artistic techniques and mediums.`,
      icon: 'tabler:briefcase',
    },
  ]}
  classes={{ container: 'max-w-3xl' }}
/>

<!-- Steps Widget ****************** -->

<Steps
  id="education"
  title="Education"
  items={[
    {
      title: `Bachelor of Fine Arts in Visual Arts <br /> <span class="font-normal">Art University</span> <br /> <span class="text-sm font-normal">2018 - 2022</span>`,
      icon: 'tabler:school',
    },
    {
      title: `Associate Degree in Art Studies <br /> <span class="font-normal">Community College</span> <br /> <span class="text-sm font-normal">2016 - 2018</span>`,
      icon: 'tabler:school',
    },
  ]}
  classes={{ container: 'max-w-3xl' }}
/>

<!-- Features3 Widget ************** -->

<Features3
  title="Skills"
  subtitle="Discover the proficiencies that allow me to bring imagination to life through art."
