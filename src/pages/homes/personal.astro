    {
      title: 'Collaboration',
      description: 'Effective in working with others on creative projects and community initiatives.',
    },
    {
      title: 'Adaptability',
      description: 'Quick to adapt to new artistic trends and techniques to enhance my craft.',
    },
  ]}
/>

