  defaultIcon="tabler:point-filled"
  items={[
    {
      title: 'Painting',
      description: 'Proficient in various painting techniques, including acrylic, watercolor, and oil.',
    },
    {
      title: 'Digital Art',
      description: 'Skilled in creating digital illustrations and graphics using advanced software.',
    },
    {
      title: 'Sculpture',
      description: 'Experienced in working with different materials to create three-dimensional art.',
    },
    {
      title: 'Graphic Design',
