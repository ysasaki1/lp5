---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Art Support Image',
    }}
  >
    <Fragment slot="title">
      Elevate your support for artists with our <br />
      <span class="text-accent dark:text-white highlight">Support Art Students Platform</span>
    </Fragment>

    <Fragment slot="subtitle">
      We connect art students with supporters, facilitating the creation of original artworks and high-quality replicas during the support period.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about our support"
    stats={[
      { title: 'Artists Supported', amount: '500+' },
      { title: 'Artworks Created', amount: '1,200+' },
      { title: 'Supporters', amount: '3,000+' },
      { title: 'Community Events', amount: '50+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Artworks"
    subtitle="Explore the diverse range of original artworks created by talented students."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Paintings',
        description:
          'Discover unique paintings that showcase the creativity and talent of our art students.',
        icon: 'tabler:template',
      },
      {
        title: 'Digital Art',
        description:
          'Experience the innovative digital creations by emerging artists in our community.',
        icon: 'tabler:template',
      },
      {
        title: 'Sculptures',
        description:
          'Admire the craftsmanship and artistic expression found in our students\' sculptures.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Photography',
        description:
          'Explore stunning photographs that capture the essence of art and life.',
        icon: 'tabler:template',
      },
      {
        title: 'Mixed Media',
        description:
          'Discover innovative mixed media pieces that blend various artistic techniques.',
        icon: 'tabler:template',
      },
      {
        title: 'Illustrations',
        description:
          'Enjoy a variety of illustrations that tell unique stories through art.',
        icon: 'tabler:template',
      },
      {
        title: 'Installations',
        description:
          'Experience immersive installations that engage the viewer in new ways.',
        icon: 'tabler:template',
      },
      {
        title: 'Textile Art',
        description:
          'Appreciate the intricate designs and techniques used in textile art created by students.',
        icon: 'tabler:template',
      },
      {
        title: 'Conceptual Art',
        description:
          'Engage with thought-provoking conceptual art that challenges perceptions.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Art Showcase',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="We believe in supporting creativity and fostering talent within the art community."
    items={[
      {
        title: 'Artist-Centric Approach',
        description:
          'We prioritize the needs and aspirations of our artists, ensuring they thrive.',
      },
      {
        title: 'Continuous Support',
        description:
          'We are committed to providing ongoing support to help artists achieve their goals.',
      },
      {
        title: 'Ethical Practices',
        description:
          'We uphold ethical standards in our support practices and artist interactions.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="Celebrating the impact of our support on the lives of art students."
    isReversed={true}
    callToAction={{
      text: 'See more about our impact',
      href: '/',
    }}
    items={[
      {
        title: 'Global Reach',
        description: 'Our platform connects artists and supporters from around the world.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive Feedback',
        description:
          'We receive heartfelt testimonials from both artists and supporters.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Awards and Recognition',
        description:
          'Our initiative has been recognized for its positive contributions to the art community.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: 'USA',
        description: '1234 Art St, 12345, New York',
      },
      {
        title: 'Spain',
        description: '5678 Creative Ave, 56789, Barcelona',
      },
      {
        title: 'Australia',
        description: '9012 Art Lane, 90123, Melbourne',
      },
      {
        title: 'Brazil',
        description: '3456 Culture Rd, 34567, Rio de Janeiro',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: 'Chat with us',
        description:
          'We are here to assist you with any inquiries. Reach out via chat for immediate support.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call us',
        description:
          'For more personalized assistance, feel free to call us anytime. We are happy to help.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
