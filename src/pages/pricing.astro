---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Support Plans',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Support Plans"
    title="Plans to Support Art Students"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Plans"
    subtitle="Pay only for what you need"
    prices={[
      {
        title: 'Basic Plan',
        subtitle: 'Ideal for individual support',
        price: 100,
        period: 'per month',
        items: [
          {
            description: 'A basic plan to support art students.',
          },
          {
            description: 'Anonymous support is available.',
          },
          {
            description: 'Receive high-quality replicas of the artwork.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start Supporting',
          href: '#',
        },
      },
      {
        title: 'Standard Plan',
        subtitle: 'Best for small teams',
        price: 250,
        period: 'per month',
        items: [
          {
            description: 'Support multiple art students.',
          },
          {
            description: 'Invitation to special art events.',
          },
          {
            description: 'Access to the supporter community.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start Supporting',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Premium Plan',
        subtitle: 'For corporate support',
        price: 500,
        period: 'per month',
        items: [
          {
            description: 'Access to a private gallery of artworks.',
          },
          {
            description: 'Detailed reports on your support activities.',
          },
          {
            description: 'Participation in exclusive art workshops.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start Supporting',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Features of Our Plans"
    subtitle="Discover the advantages of choosing our support plans"
    columns={2}
    items={[
      {
        title: 'Tiered Support Plans',
        description: 'Choose from a variety of support plans to fit different budgets and needs.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clear pricing details for each plan, with no hidden costs.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access',
        description: `Immediate access to the artworks upon starting your support.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier plans for more features and benefits.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24/7 Support',
        description: 'Questions answered via live chat, email, or phone every day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A Guided Journey from Support to Creativity"
    tagline="Simplified Process"
    isReversed={true}
    items={[
      {
        title: 'Explore Plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a Plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review Order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter Payment Details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Download and Start Using the Artworks',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps Image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Support Plan FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions."
    columns={1}
    items={[
      {
        title: 'Do the plans include customer support?',
        description:
          'Absolutely, all plans include access to our dedicated customer support for any questions you have.',
      },
      {
        title: 'Is there a trial period for the plans?',
        description:
          "Unfortunately, we don't offer trial periods. However, you can check out our demo section to preview the quality of our offerings.",
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Certainly! You can easily upgrade or downgrade your plan at any time.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods for secure transactions.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the subscription cost covers all features and benefits listed under each plan. There are no hidden fees.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Support Art Students?"
    subtitle="Join our community of satisfied supporters who have made a difference."
    actions={[
      {
        variant: 'primary',
        text: 'Start Supporting Now',
        href: '/',
      },
    ]}
  />
</Layout>
