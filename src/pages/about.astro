---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Art Student Support Image',
    }}
  >
    <Fragment slot="title">
      Empower Art Students through <br />
      <span class="text-accent dark:text-white highlight"> Our Platform</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join us in providing financial support to art students, enabling them to create original artworks. Your contributions help aspiring artists thrive while receiving high-quality reproductions of their work.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about Us"
    stats={[
      { title: 'Artists Supported', amount: '500+' },
      { title: 'Artworks Created', amount: '1,200+' },
      { title: 'Supporters Joined', amount: '3,000+' },
      { title: 'Community Events', amount: '50+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Support"
    subtitle="Support art students while enjoying access to their unique artwork."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Artwork Creation',
        description:
          'Provide financial assistance to art students, helping them create original artworks.',
        icon: 'tabler:template',
      },
      {
        title: 'Receive High-Quality Reproductions',
        description:
          'Enjoy high-definition reproductions of the artworks during the support period.',
        icon: 'tabler:template',
      },
      {
        title: 'Transparent Funding',
        description:
          '80% of the support goes directly to the artists, ensuring they receive fair compensation.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Community Engagement',
        description:
          'Join a community that values and uplifts aspiring artists.',
        icon: 'tabler:template',
      },
      {
        title: 'Flexible Contribution Options',
        description:
          'Choose between annual or monthly contributions to support the artists you believe in.',
        icon: 'tabler:template',
      },
      {
        title: 'Secure Storage',
        description:
          'The platform securely stores the original artworks, ensuring their safety and preservation.',
        icon: 'tabler:template',
      },
      {
        title: 'Impactful Support',
        description:
          'Your contributions directly impact the lives of art students, helping them pursue their passion.',
        icon: 'tabler:template',
      },
      {
        title: 'Discover New Talent',
        description:
          'Explore the works of emerging artists and support their journey in the art world.',
        icon: 'tabler:template',
      },
      {
        title: 'Anonymous Support',
        description:
          'Supporters can remain anonymous while contributing to the artistsâ€™ success.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Art Showcase Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="We believe in supporting creativity and fostering talent within the art community."
    items={[
      {
        title: 'Artist-Centric Approach',
        description:
          'We prioritize the needs and aspirations of our artists, ensuring they thrive.',
      },
      {
        title: 'Constant Improvement',
        description:
          'We are committed to providing ongoing support to help artists achieve their goals.',
      },
      {
        title: 'Ethical Practices',
        description:
          'We uphold ethical standards in our support practices and artist interactions.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Celebrating the impact of our support on the lives of art students."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={[
      {
        title: 'Global Reach',
        description: 'Our platform connects artists and supporters from around the world.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive Feedback',
        description:
          'We receive heartfelt testimonials from both artists and supporters.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Awards and Recognition',
        description:
          'Our initiative has been recognized for its positive contributions to the art community.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: 'USA',
        description: '1234 Art St, 12345, New York',
      },
      {
        title: 'Spain',
        description: '5678 Creative Ave, 56789, Barcelona',
      },
      {
        title: 'Australia',
        description: '9012 Art Lane, 90123, Melbourne',
      },
      {
        title: 'Brazil',
        description: '3456 Culture Rd, 34567, Rio de Janeiro',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: 'Chat with us',
        description:
          'We are here to assist you with any inquiries. Reach out via chat for immediate support.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call us',
        description:
          'For more personalized assistance, feel free to call us anytime. We are happy to help.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
